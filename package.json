{
  "name": "momentum",
  "version": "0.5.0",
  "description": "Fast context recovery for Claude Code - never lose your momentum",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "momentum": "dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:types": "tsc --emitDeclarationOnly",
    "build:bin": "bun build --compile src/index.ts --outfile dist/momentum-bin",
    "build:bin:linux-x64": "bun build --compile --target=bun-linux-x64 src/index.ts --outfile dist/momentum-linux-x64",
    "build:bin:linux-arm64": "bun build --compile --target=bun-linux-arm64 src/index.ts --outfile dist/momentum-linux-arm64",
    "build:bin:darwin-x64": "bun build --compile --target=bun-darwin-x64 src/index.ts --outfile dist/momentum-darwin-x64",
    "build:bin:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 src/index.ts --outfile dist/momentum-darwin-arm64",
    "build:bin:windows-x64": "bun build --compile --target=bun-windows-x64 src/index.ts --outfile dist/momentum-windows-x64.exe",
    "build:bin:all": "bun run build:bin:linux-x64 && bun run build:bin:linux-arm64 && bun run build:bin:darwin-x64 && bun run build:bin:darwin-arm64 && bun run build:bin:windows-x64",
    "dev": "bun --watch src/index.ts",
    "start": "bun dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:benchmark": "bun test tests/benchmark.test.ts",
    "test:harness": "bun tools/test-harness.ts",
    "prepublishOnly": "bun run build",
    "setup": "bun install && bun run build",
    "validate": "./scripts/validate.sh"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "context",
    "recovery",
    "snapshots",
    "substratia",
    "bun"
  ],
  "author": "whenmoon-afk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whenmoon-afk/momentum.git"
  },
  "homepage": "https://github.com/whenmoon-afk/momentum#readme",
  "bugs": {
    "url": "https://github.com/whenmoon-afk/momentum/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "dist",
    "cli",
    ".claude-plugin",
    "skills",
    "hooks",
    "agents",
    "commands",
    "scripts",
    "README.md",
    "CHANGELOG.md",
    "BENCHMARKS.md"
  ]
}
