{
  "name": "momentum",
  "version": "0.7.0",
  "description": "Fast context recovery for Claude Code - never lose your momentum",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "momentum": "cli/mcp-server-wrapper.js"
  },
  "scripts": {
    "build": "tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "node --test tests/*.test.js",
    "prepublishOnly": "npm run build",
    "setup": "npm install && npm run build",
    "postinstall": "npm rebuild better-sqlite3 2>/dev/null || true"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "context",
    "recovery",
    "snapshots",
    "substratia"
  ],
  "author": "whenmoon-afk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whenmoon-afk/momentum.git"
  },
  "homepage": "https://github.com/whenmoon-afk/momentum#readme",
  "bugs": {
    "url": "https://github.com/whenmoon-afk/momentum/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "cli",
    ".claude-plugin",
    "skills",
    "hooks",
    "commands",
    "README.md",
    "CHANGELOG.md"
  ]
}
