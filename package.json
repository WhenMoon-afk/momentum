{
  "name": "momentum",
  "version": "0.3.0",
  "description": "Fast context recovery for Claude Code - never lose your momentum",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "momentum": "dist/index.js"
  },
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run tsc --watch",
    "start": "bun run dist/index.js",
    "test": "bun run vitest run",
    "test:watch": "bun run vitest",
    "test:coverage": "bun run vitest run --coverage",
    "test:benchmark": "bun run vitest run tests/benchmark.test.ts",
    "test:harness": "bun run tools/test-harness.ts",
    "prepublishOnly": "bun run build",
    "setup": "bun install && bun run build",
    "validate": "./scripts/validate.sh"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "context",
    "recovery",
    "snapshots",
    "substratia"
  ],
  "author": "whenmoon-afk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whenmoon-afk/momentum.git"
  },
  "homepage": "https://github.com/whenmoon-afk/momentum#readme",
  "bugs": {
    "url": "https://github.com/whenmoon-afk/momentum/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.6.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "cli",
    ".claude-plugin",
    "skills",
    "hooks",
    "agents",
    "scripts",
    "README.md",
    "CHANGELOG.md",
    "BENCHMARKS.md"
  ]
}
